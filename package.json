{
    "name": "starter-nestjs",
    "version": "2.0.0",
    "private": true,
    "scripts": {
        "format": "prettier --write \"**/*.ts\"",
        "start": "ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "nodemon",
        "prestart:prod": "tsc",
        "start:prod": "cross-env NODE_ENV=production node dist/main.js",
        "start:hmr": "node dist/server",
        "test": "jest",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "webpack": "webpack --config webpack.config.js"
    },
    "dependencies": {
        "@nestjs/common": "^5.6.2",
        "@nestjs/core": "^5.6.2",
        "bcryptjs": "^2.4.3",
        "class-validator": "^0.8.5",
        "fastify-formbody": "^2.1.0",
        "jsonwebtoken": "^8.4.0",
        "pg": "^7.8.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^6.3.3",
        "sequelize": "^4.42.0",
        "sequelize-typescript": "^0.6.7",
        "typescript": "^2.6.2"
    },
    "devDependencies": {
        "@nestjs/testing": "^5.6.2",
        "@types/express": "^4.16.1",
        "@types/jest": "^21.1.8",
        "@types/node": "^9.6.41",
        "@types/sequelize": "^4.27.34",
        "@types/supertest": "^2.0.7",
        "cross-env": "^5.2.0",
        "jest": "^21.2.1",
        "nodemon": "^1.18.9",
        "prettier": "^1.16.1",
        "supertest": "^3.4.2",
        "ts-jest": "^21.2.4",
        "ts-loader": "^4.5.0",
        "ts-node": "^4.1.0",
        "tsconfig-paths": "^3.7.0",
        "tslint": "5.3.2",
        "webpack": "^4.29.0",
        "webpack-cli": "^2.0.13",
        "webpack-node-externals": "^1.6.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage"
    }
}
